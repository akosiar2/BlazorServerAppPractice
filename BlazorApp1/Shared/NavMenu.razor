<div class="top-row navbar navbar-dark">
    <div class="container-fluid">

        @if (!@IconMenuActive)
        {
            <span class="oi oi-monitor" style="color:white;" aria-hidden="true"></span>
            <a class="navbar-brand" href="">Title</a>
        }
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleIconMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>

<div @onclick="ToggleIconMenu">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="oi oi-home" aria-hidden="true"></span>
                @if (!@IconMenuActive)
                {
                    <label>Home</label>
                }
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="counter">
                <span class="oi oi-plus" aria-hidden="true"></span>
                @if (!@IconMenuActive)
                {
                    <label>Counter</label>
                }
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="fetchdata">
                <span class="oi oi-list-rich" aria-hidden="true"></span>
                @if (!@IconMenuActive)
                {
                    <label>Fetch data</label>
                }
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="fetch">
                <span class="oi oi-list" aria-hidden="true"></span>
                @if (!@IconMenuActive)
                {
                    <label>Fetch Json</label>
                }
            </NavLink>
        </div>
    </nav>


</div>

@code {

    //bool to send to MainLayout for shrinking sidebar and showing/hide menu text
    private bool IconMenuActive { get; set; } = false;

    [Parameter]
    public bool IconActived {get; set;}

    //EventCallback for sending bool to MainLayout
    [Parameter]
    public EventCallback<bool> ShowIconMenu { get; set; }

    //Method to toggle IconMenuActive bool and send bool via EventCallback
    private async Task ToggleIconMenu()
    {
        IconMenuActive = !IconMenuActive;
        await ShowIconMenu.InvokeAsync(IconMenuActive);
    }

    protected override Task OnInitializedAsync()
    {
        IconMenuActive = IconActived;

        return base.OnInitializedAsync();
    }
}
